{
	"tailwindConfig": "./tailwind.config.ts",
	"printWidth": 85,
	"tabWidth": 2,
	"singleQuote": false,
	"trailingComma": "all",
	"arrowParens": "always",
	"semi": false,

	"importOrder": [
		"^(react/(.*)$)|^(react$)",
		"",
		"<THIRD_PARTY_MODULES>",
		"",
		"^types$",
		"^@/src/types/(.*)$",
		"^@/src/lib/(.*)$",
		"^@/src/hooks/(.*)$",
		"^@/src/util/(.*)$",
		"^@/src/components/ui/(.*)$",
		"^@/src/components/(.*)$",
		"^@/src/env(.*)$",
		"^@/src/modules/(.*)$",
		"^@/src/routes/(.*)$",
		"^@/src/styles/(.*)$",
		"",
		"^[./]"
	],

	"importOrderParserPlugins": ["typescript", "jsx", "decorators-legacy"],
	"plugins": ["@ianvs/prettier-plugin-sort-imports", "prettier-plugin-tailwindcss"]
}
